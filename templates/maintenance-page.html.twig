{#
/**
 * @file
 * Theme override to display a single Drupal page while offline.
 *
 * All available variables are mirrored in page.html.twig.
 * Some may be blank but they are provided for consistency.
 *
 * @see template_preprocess_maintenance_page()
 */
#}
<div class="off-canvas-wrap" data-offcanvas>

  {% include '@iu/parts/header.html.twig' %}

<div class="inner-wrap">

  <header class="site-header" itemscope="itemscope" itemtype="http://schema.org/CollegeOrUniversity" role="banner"><div class="row pad">

    <h1>
      <a class="title" href="{{ front_page }}" itemprop="department">{{ site_name }}</a>
    </h1>

  </div></header>

  {{ page.primary_menu }}

  {{ page.secondary_menu }}

  {{ page.highlighted }}

  <main role="main" class="{{ page.section_nav ?: 'no-section-nav' }}">

    {{ page.section_nav }}

    {{ page.help }}

    {{ page.breadcrumb }}

    {% if title %}
    <div class="section page-title bg-none"><div class="row"><div class="layout">
      <h1>{{ title }}</h1>
    </div></div></div>
    {% endif %}

    <div class="section bg-none" id="content"><div class="row"><div class="layout">
      {{ page.content }}
    </div></div></div>
  </main>

  {% if page.belt_nav or page.belt_social_media %}
  <div class="section bg-mahogany bg-dark dark belt"><div class="row pad">

    <div class="one-half belt-nav">
      {{ page.belt_nav }}
    </div>

    <div class="one-half belt-social-media">
      <div class="border invert">
        {{ page.belt_social_media }}
      </div>
    </div>

  </div></div>
  {% endif %}

  {% if page.skirt_nav or page.skirt_connect %}
  <div class="section bg-mahogany bg-dark dark skirt"><div class="row pad">

    {{ page.skirt_nav }}

    {{ page.skirt_connect }}

  </div></div>
  {% endif %}

  {% include '@iu/parts/footer.html.twig' %}

</div>{# /.inner-wrap #}

<div class="right-off-canvas-menu show-for-medium-down">
  <!-- @todo: offcanvas: add mobile menu -->
</div>

</div>{# /.off-canvas-wrap #}
